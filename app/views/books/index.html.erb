<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th class="sa">Title</th>
            <th class="sa">Body</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td class="book"><%= book.title %></td>
                <td class="book"><%= book.body %></td>
                <td class="link"><a href= '/books/<%= book.id %>'>Show</a></td>
                <td class="link"><a href= '/books/<%= book.id %>/edit'>Edit</a></td>
                <td class="link"><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr> 
        <% end %>
    </tbody>
</table>
<h2>New book</h2>
<% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with model: @book do |f| %>
    <div class= "life1">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class= "life1">
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div class= "life2">
        <%= f.submit 'Create Book' %>
    </div>
<% end %>