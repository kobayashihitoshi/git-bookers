<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
    <div class= "edit1">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class= "edit1">
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div class= "edit2">
        <%= f.submit 'Update Book' %>
    </div>
<% end %>
<a href= '/books/<%= @book.id %>'>Show</a>
